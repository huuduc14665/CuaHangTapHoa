@model CuaHangTapHoa.Models.Tag
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Thông tin chi tiết</h2>

<div class="p-4 border rounded">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TenTag"></label>
        </div>
        <div class="col-5">
            <input asp-for="TenTag" disabled class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-ma="@Model.MaTag" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
    </div>
</div>




