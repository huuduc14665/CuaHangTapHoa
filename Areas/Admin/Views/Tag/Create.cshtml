@model CuaHangTapHoa.Models.Tag

@{
    ViewData["Title"] = "Create";
}

    <br />
    <h2 class="text-info">Tạo Tag mới</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenTag" class="control-label"></label>
                <input asp-for="TenTag" class="form-control" />
                <span asp-validation-for="TenTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}