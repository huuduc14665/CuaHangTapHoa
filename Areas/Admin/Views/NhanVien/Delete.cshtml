@model CuaHangTapHoa.Models.NhanVien
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa/ Ngưng hoạt động nhân viên</h2>

<form method="post">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenNV"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenNV" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SoDT"></label>
            </div>
            <div class="col-5">
                <input asp-for="SoDT" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DiaChi"></label>
            </div>
            <div class="col-5">
                <input asp-for="DiaChi" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Xóa/Ngưng hoạt động" />
            <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
