@model CuaHangTapHoa.Models.NhanVien
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Chỉnh sửa thông tin nhân viên</h2>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenNV"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenNV" class="form-control" />
            </div>
            <span asp-validation-for="TenNV" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SoDT"></label>
            </div>
            <div class="col-5">
                <input asp-for="SoDT" class="form-control" />
            </div>
            <span asp-validation-for="SoDT" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DiaChi"></label>
            </div>
            <div class="col-5">
                <input asp-for="DiaChi" class="form-control" />
            </div>
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Tên tài khoản</label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
