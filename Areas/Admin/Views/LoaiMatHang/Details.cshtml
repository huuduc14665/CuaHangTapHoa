@model CuaHangTapHoa.Models.LoaiMatHang
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Thông tin chi tiết </h2>

    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenLMH"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenLMH" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MoTa"></label>
            </div>
            <div class="col-5">
                <input asp-for="MoTa" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TrangThai"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" disabled asp-for="TrangThai" />
            </div>
        </div>

        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-ma="@Model.MaLMH"class="btn btn-primary">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
        </div>
    </div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
