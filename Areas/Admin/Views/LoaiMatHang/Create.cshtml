@model CuaHangTapHoa.Models.LoaiMatHang
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Tạo loại mặt hàng mới</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenLMH"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenLMH" class="form-control" />
            </div>
            <span asp-validation-for="TenLMH" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MoTa"></label>
            </div>
            <div class="col-5">
                <input asp-for="MoTa" class="form-control" />
            </div>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TrangThai"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="TrangThai" />
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tạo" />
            <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
