@model CuaHangTapHoa.Models.ViewModels.DonHangViewModel

    <form method="get">
        <br /><br />
        <h2 class="text-info">Danh sách đơn hàng</h2>
        <br />

        <div style="height:150px; background-color:aliceblue" class="container">
            @*Tìm kiếm*@
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Tên khách hàng
                </div>
                <div class="col-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-2">
                    Địa chỉ
                </div>
                <div class="col-3">
                    @Html.Editor("searchAddress", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Số điện thoại
                </div>
                <div class="col-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-2">
                    Ngày nhận hàng
                </div>
                <div class="col-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                </div>
            </div>
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                </div>
                <div class="col-3">
                </div>
                <div class="col-2">

                </div>
                <div class="col-2">
                </div>
                <div class="col-3">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fas fa-search">Tìm kiếm</i>
                    </button>
                </div>
            </div>
        </div>

        <br /><br />

        <div>
            <table class="table table-striped border">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().NhanVien.TenNV)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().NgayNhanHang)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().TenKH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().SoDienThoai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().DiaChiKH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().TongTien)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DonHangs.FirstOrDefault().TrangThai)
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model.DonHangs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.NhanVien.TenNV)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.NgayNhanHang)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TenKH)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.SoDienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DiaChiKH)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TongTien)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TrangThai)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.MaDH" />
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
             page-class="btn border" page-class-normal="btn btn-default active"
             page-class-selected="btn btn-primary active" class="btn-group m-1"></div>

    </form>

@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate:"+3M"
            });
        });
    </script>
}