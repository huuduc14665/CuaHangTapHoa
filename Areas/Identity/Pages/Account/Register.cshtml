@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng kí";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Tạo tài khoản mới.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TenNV"></label>
                <input asp-for="Input.TenNV" class="form-control" />
                <span asp-validation-for="Input.TenNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SoDT"></label>
                <input asp-for="Input.SoDT" class="form-control" />
                <span asp-validation-for="Input.SoDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DiaChi"></label>
                <input asp-for="Input.DiaChi" class="form-control" />
                <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.laQuanLi"></label>
                <input asp-for="Input.laQuanLi" type="checkbox" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Đăng kí</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
